<!-- Carrusel -->
<div class="carousel w-full">
    <%for(var i=0; i < recetas.length; i++ ){%>

    <div id="slide<%=i%>" class="carousel-item relative w-full">
      <img src="<%=recetas[i].imagen%>" class="w-full"> / 
      <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
        <a href="#slide<%= i-1 == -1 ? 3 : i-1 %>" class="btn btn-circle">❮</a> 
        <a href="#slide<%=i+1%>" class="btn btn-circle">❯</a>
      </div>
    </div> 
    <%}%>
    
  </div>
  
<!-- Fin Carrusel -->

<!-- Categorias -->
<h1 class="text-center m-8 font-bold text-2xl">Categorias</h1>

    <div class=" my-4 mx-4 grid place-items-center xl:grid-cols-3 md:grid-cols-2 gap-4">
      <%for(var i=0; i < categorias.length; i++ ){%>

        
        
        <div class="card w-96 bg-base-100 shadow-xl">
            <figure><img src="<%=categorias[i].imagen%>" alt="Shoes" /></figure>
            <div class="card-body">
              <h2 class="card-title"><%=categorias[i].nombre%></h2>
              <div class="card-actions justify-end">
                <a href="/recetas/<%=categorias[i].id%>">
                  <button class="btn btn-primary">Ver Recetas</button>
                </a>
              </div>
            </div>
        </div>
        <%}%>
      </div>
    </div>


<!-- Fin Categorias -->